<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A2A2A2"
        tools:context=".SecondActivity"
android:id="@+id/second_layout">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Enter Input String"
            android:textSize="20dp"
            android:imeOptions="actionDone"
            android:textColorHint="@color/colorPrimary"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:id="@+id/InputText"
            android:textStyle="italic" android:typeface="sans"/>
    <TextView
            android:text=" "
            android:layout_width="358dp"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
            android:id="@+id/stateText" android:layout_marginBottom="2dp"
            android:layout_marginLeft="0dp" android:layout_above="@+id/InputText"
            android:textColor="@color/colorAccent" android:typeface="sans" android:textStyle="italic"/>
</RelativeLayout>